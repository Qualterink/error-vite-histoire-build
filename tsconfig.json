{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src","src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2015",
    "module": "ES2022",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "newLine": "lf",
    "jsx": "preserve",
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "importsNotUsedAsValues": "error",
    "types": [
      "node",
      "vue",
//      "@types/jest",
//      "webpack-env",
      "vue-i18n"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform":"@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
